{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console"
        ],
        "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
                "Host": "Information",
                "Microsoft": "Information",
                "System": "Information",
                "Microsoft.AspNetCore": "Information"
            }
        },
        "Enrich": [
            "WithExceptionDetails"
        ],
        "WriteTo": [
            {
                "Name": "Console"
            }
        ]
    }
}