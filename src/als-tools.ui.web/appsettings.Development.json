{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Async"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Host": "Information",
                "Microsoft": "Information",
                "System": "Information",
                "Microsoft.AspNetCore": "Information"
            }
        },
        "Enrich": [
            "WithExceptionDetails"
        ],
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console"
                        }
                    ]
                }
            }
        ]
    }
}